<div class="text-center">
  <h1 class="text-white">{{data.displayName}}</h1>
</div>
<div class="container text-center">
  <div class="row justify-content-center">
    <div class="col-12 w-75">
      <img
        src={{data.displayIcon}}
        class="card-img-top"
        alt="{{data.displayName}}"
      />
      <div class="card-body">
        <p class="card-text mt-4 text-white">
          {{data.description}}
        </p>
      </div>
    </div>
  </div>
</div>
<div class="container text-center mb-5">
  <div class="row justify-content-center">
    <div class="text-center m-4">
      <h3 class="text-white">Abilities</h3>
    </div>
    {{#each data.abilities}}
      <div class="card col-5 m-2 bg-dark">
        <img src={{displayIcon}} class="card-img-top " alt="{{displayName}}" />
        <div class="card-body text-white">
          <h5 class="card-title">{{displayName}}</h5>
          <p class="card-text">
            {{description}}
          </p>
        </div>
      </div>
    {{/each}}
  </div>
</div>