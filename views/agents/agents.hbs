<div class="text-center">
  <h1 class="text-white">Agents</h1>
</div>
<div class="container text-center">
  <div class="row">
    {{#each data}}
      {{#if isPlayableCharacter}}
        <div class="col-12 col-md-4 product mb-3">
          <div class="card">
            <img
              src={{displayIcon}}
              class="card-img-top"
              alt="{{displayName}}"
            />
            <div class="card-body">
              <h5 class="card-title">{{displayName}}</h5>
              <p class="card-text">
                {{description}}
              </p>
              <a href="/agents/{{uuid}}" class="btn btn-danger mb-2 d-block">More details</a>
            </div>
          </div>
        </div>
      {{/if}}
    {{/each}}
  </div>
</div>