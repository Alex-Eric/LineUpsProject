<div class="text-center">
  <h1 class="text-white">LINEUPS</h1>
</div>
<div class="text-end m-5">
  <a href="/lineups/create" class="btn btn-primary">Create lineup!</a>
</div>

<form method="GET" action="/lineups">
  <label class="text-white">
    Agent:
    <select name="agent">
      <option value="all" selected>All agents</option>
      {{#each agents}}
        <option value={{this._id}}>{{this.name}}</option>
      {{/each}}
    </select>
  </label>
  <label class="text-white">
    Map:
    <select name="map">
      <option value="all" selected>All maps</option>
      {{#each maps}}
        <option value={{this._id}}>{{this.name}}</option>
      {{/each}}
    </select>
  </label>
  <label class="text-white">
    Objective
    <select name="lineUpType">
      <option value="all" selected>All objectives</option>
      <option value="attack">Attack</option>
      <option value="defense">Defense</option>
    </select>
  </label>
  <button type="submit">Search</button>
</form>
<div class="container text-center">
  <div class="row">
    {{#each lineup}}
      <div class="col-12 col-md-4 product mb-3">
        <div class="card h-100">
          <h2>{{title}}</h2>
          <video poster="placeholder.png">
            <source src={{videoUrl}} type="video/mp4" />
            Your browser does not support HTML video.
          </video>
          <div class="card-body">
            <h5 class="card-title">{{agent.name}}</h5>
            <h5 class="card-title">{{map.name}}</h5>
            <h5 class="card-title">{{lineUpType}}</h5>
            <a href="/lineups/{{_id}}" class="btn btn-primary">More details</a>
            <form action="/lineups/{{_id}}/update">
            {{#if loggedIn}}
              <button>Update</button>
            {{/if}}
            </form>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>