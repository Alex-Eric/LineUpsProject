<div class="text-center">
  <h1 class="text-white">LINEUPS</h1>
</div>
<div class="text-center m-5">
  <a href="/lineups/create" class="btn btn-primary w-25">Create lineup!</a>
  <a href="/lineups/myLineups" class="btn btn-primary w-25">See my lineups</a>
</div>

<form method="GET" action="/lineups">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="form-group col-3">
      <label for="exampleFormControlSelect1" class="text-white">Agent:</label>
      <select name="agent" class="form-control">
        <option value="all" selected>All agents</option>
        {{#each agents}}
          <option value={{this._id}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group col-3">
      <label for="exampleFormControlSelect1" class="text-white">Map:</label>
      <select name="map" class="form-control">
        <option value="all" selected>All maps</option>
        {{#each maps}}
          <option value={{this._id}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group col-3">
      <label
        for="exampleFormControlSelect1"
        class="text-white"
      >Objective</label>
      <select name="lineUpType" class="form-control">
        <option value="all" selected>All objectives</option>
        <option value="attack">Attack</option>
        <option value="defense">Defense</option>
      </select>
    </div>
  </div>
  <div class="row justify-content-center m-3">
    <div class="col-4">
      <button type="submit" class="w-100 btn btn-secondary">Search</button>
    </div>
  </div>
</form>
<div class="container text-center">
  <div class="row">
    {{#each lineup}}
      <div class="col-12 col-md-4 product mb-3">
        <div class="card h-100">
          <h2>{{title}}</h2>
          <video poster="placeholder.png">
            <source src={{videoUrl}} type="video/mp4" />
            Your browser does not support HTML video.
          </video>
          <div class="card-body">
            <h5 class="card-title">{{agent.name}}</h5>
            <h5 class="card-title">{{map.name}}</h5>
            <h5 class="card-title">{{lineUpType}}</h5>
            <h5 class="card-title">{{creator.username}}</h5>
            <a href="/lineups/{{_id}}" class="btn btn-primary mb-2">More details</a>
            <form action="/lineups/{{_id}}/update">
              {{#if loggedIn}}
                <button class="btn btn-danger">Update</button>
              {{/if}}
            </form>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>